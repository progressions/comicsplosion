<h1>New permission</h1>

<%= error_messages_for :permission %>

<% form_for(:permission, :url => permissions_path) do |f| %>
  <p>
    <b>User</b><br />
    <%= f.text_field :user_id %>
  </p>

  <p>
    <b>Role</b><br />
    <%= f.text_field :role_id %>
  </p>

  <p>
    <%= submit_tag "Create" %>
  </p>
<% end %>

<%= link_to 'Back', permissions_path %>